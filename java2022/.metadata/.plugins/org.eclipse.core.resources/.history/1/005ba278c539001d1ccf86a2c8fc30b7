package recapDemo1;

public class mukemmelSayi {

	public static void main(String[] args) {
		
         int number=5;
         int total=0;
         for(int i=0; i<number; i++) {
        	 if(number%i==0) {
        		 total=total+i;
        	 }
        	
         }
         if(total==number) {
     		System.out.println("Mükemmel sayılar");
     		
     	}else {
     		System.out.println("Mükemmel sayı değildir");
     	}
	}   

}
