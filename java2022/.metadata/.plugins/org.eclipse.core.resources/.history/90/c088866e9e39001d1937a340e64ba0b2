package recapDemo1;

public class miniProjeAsalSayi {

	public static void main(String[] args) {
		int number=2;
		int remainder=number%2;//kalanı bulma sayının 2 ye bölümünden kalan 
		//System.out.println(remainder);
   //ASAL SAYI=1 ve kendisinden başka böleni olmayan sayılar
		boolean isPrime=true;//isPrime asal sayımı demek.burada sayıyı asal olaral kabul ediyoruz
		if(number==1) {//eğer sayı 1 e eşitse çalışacak  kod bloğu
			System.out.println("sayı asal değildir");
		}
		
	
		if(number<2) {//eğer sayı 2 den küçükse çalışacak kod bloğu
			System.out.println("Geçersiz sayı");
		}
		
		
		for(int i=2; i<number; i++) {//2 den 24 e kadar döngü kurdum.24 e kadar tüm sayıları teker teker 25 e bölecek
			                         //2 den bölmeye başlayacağım için 2 den başlattım
			if(number%2==0) {//eğer sayı 2 ye bölünüyorsa.Sayıları tek tek 2 ye bölecek
				isPrime=false;
				
			}
		}
            if(isPrime) {//eğer number isPrime yani asal sa çalışacak kod bloğu
            	System.out.println("sayı asaldır");
            }
            else {//eğer asal değilse çalışacak kod bloğu
            	System.out.println("sayı asal değildir");
            }
		}
	}


