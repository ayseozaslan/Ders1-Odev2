package recapDemo1;

public class recapDemo2 {

	public static void main(String[] args) {
		double[] myList = { 1.2, 1.3, 4.3, 5.6 };

		for (double number : myList) {// Dizileri mylisti tek tek ekrana yazdırma
										// Mylist içindeki numberlerı gez

			System.out.println(number);

		}

		System.out.println("*****SAYILARIN TOPLAMI***********");

		double[] myList2 = { 1.2, 1.3, 4.3, 5.6 };
		double total = 0;
		for (double number1 : myList2) {// Dizileri mylisti tek tek ekrana yazdırma
										// Mylist içindeki numberlerı gez
			total = total + number1;// totali 0 olarak aldık 0=0+birinci sayı
									// birinci sayı=birincisayı+ikinci sayı
									// diye tüm elemanlrı gezip toplamını yapacak.
			System.out.println(number1);

		}
		System.out.println("Toplam :" + total);// toplam deyip totalde toplana tüm sayıları yazdıralım.

		System.out.println("*****EN BÜYÜK SAYIYI BULMA*****");

		double[] myList3 = { 1.2, 1.3, 4.3, 6.3 };
		double total2 = 0;
		double max = myList3[0];
		for (double number2 : myList3) {
			if (max < number2)// eğer max numberdan küçükse
				max = number2;// tüm number yani sayıları teker teker gezip en büyük sayıya gelince büyük
								// sayıyı max a eşitle.

		}

		//System.out.println("Toplam :" + total2);
		System.out.println("En büyük =" + max);

	}
}
